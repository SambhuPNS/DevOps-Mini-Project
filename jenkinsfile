pipeline {
    agent any

    environment{
        DOCKER_IMAGE_NAME = 'java_calculator'
        GITHUB_REPO_URL = 'https://github.com/SambhuPNS/SPE_MiniProject.git'
	DOCKER_REGISTRY_CREDENTIAL = credentials('DockerHubCred')
	DOCKER_PASSWORD = 'Sambhu@123'
	DOCKER_USERNAME = 'sambhuss'
	DOCKER_REGISTRY = 'https://docker.io/sambhuss'
    }

    stages {
        stage('GIT CHECKOUT') {
            steps {
                script {
                        // Checkout the code from the GitHub repository
			git branch: 'main', credentialsId: 'webhook-token', url: "${GITHUB_REPO_URL}"
                }
            }
        }
        stage('MAVEN BUILD') {
            steps {
		//build project
                sh 'mvn clean install'
            }
        }

        stage('MAVEN TEST') {
             steps {
                 sh 'mvn test'
             }
        }

        stage('BUILD DOCKER IMAGE') {
            steps {
                    script {
                        //docker.build("${DOCKER_IMAGE_NAME}", '.')
			sh 'sudo docker build -t $DOCKER_IMAGE_NAME .'
                    }
            }
        }

        stage('PUSH DOCKER IMAGE') {
            steps {
                script {
                    // Docker login with credentialsncmmcnmz
                    withCredentials([usernamePassword(credentialsId: DOCKER_REGISTRY_CREDENTIALS, passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        // Log in to Docker registry
                        sh "echo \$DOCKER_PASSWORD | docker login --username \$DOCKER_USERNAME --password-stdin \$DOCKER_REGISTRY"

			sh 'sudo docker tag java_calculator sambhuss/java_calculator:latest'

                        // Push the Docker image to Docker Hub
                        sh "sudo docker push sambhuss/java_calculator"
                    }
                }
            }
	}

	
		//Remove dangling images
		sh "sudo docker image prune -f"
		script{
			//check if container is already running
			def isContainerRunning = sh(script: "sudo docker ps -q --filter name=java_calculator", returnStatus: true)

		if(isContainerRunning == 0) {
			//if container is running stop it
			sh "sudo docker stop java_calculator"
			}
		}
		 
		//remove container and image
		sh "sudo docker rm java_calculator:latest || true"
                sh "sudo docker rmi -f sambhuss/java_calculator || true"

            }
        }

        stage('RUN ANSIBLE PLAYBOOK') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'deploy.yml',
                        inventory: 'inventory'
                    )
                }
            }
        }
    }

